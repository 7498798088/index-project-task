pipeline {
    agent any
    stages {
        stage('Clone repository') {
            steps {
                git branch: 'main', url: 'https://github.com/7498798088/index-project-task.git'

            }
        }
        stage('Deploy to server') {
            steps {
                // Copy the index.html to the server's web root directory
                sh '''
                    scp index.html akashmahant@52.72.97.182:/var/www/html/index.html
                '''
            }
        }
    }
}
